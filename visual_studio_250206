int NumeroVocales = 0;
string LetrasBuscar = "aáeéiíïoóuúü";

Console.Write("Introduce un texto: ");
string Texto = Console.ReadLine().ToLower();

for (int i = 0; i < Texto.Length; i++) {
    // Comprobar si el carácter es una vocal
    if (LetrasBuscar.Contains(Texto[i])) {
        NumeroVocales++;
    } else {
        //Nada
    }
}

Console.WriteLine("Numero de vocales: " + NumeroVocales);
