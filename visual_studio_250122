
using System;

class Program
{
    static void Main(string[] args)
    {
        int resultado = SumarPrimerosDiezNumeros();
        Console.WriteLine("La suma de los primeros 10 números es: " + resultado);
    }

    static int SumarPrimerosDiezNumeros()
    {
        int suma = 0;
        for (int i = 1; i <= 10; i++)
        {
            suma += i;
        }
        return suma;
    }
}
